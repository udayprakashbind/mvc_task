@model mvc_task.Models.manage_subadmin

@{
    ViewBag.Title = "add_subadmin";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}


<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Add/Update Sub Admin</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
            @using (Html.BeginForm("insert_subadmin", "admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Sub Admin Name</label>
                            <input type="text" class="form-control" name="SubAdminName" value="@Model.SubAdminName" placeholder="Enter Sub Admin Name...">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" placeholder="Enter Password ..." name="Password" value="@Model.Password">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Mobile No.</label>
                            <input type="number" class="form-control" placeholder="Enter Mobile No ..." name="MobileNo" value="@Model.MobileNo">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Sub Admin Branch</label>
                            <input type="text" class="form-control" placeholder="Enter Sub Admin Branch..." name="SubAdminBranch" value="@Model.SubAdminBranch">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label for="">Gender:-</label>
                            <select class="form-control" id="Gender" name="Gender" @(Model.Gender != "" ? "data-select=" + Model.Gender + "" : "") required>
                                <option>--Select Gender--</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Designation</label>
                            <input type="text" class="form-control" placeholder="Enter Designation ..." name="Designation" value="@Model.Designation">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>DOB</label>
                            <input type="date" class="form-control" id="DOB" name="DOB" placeholder="DD/MM/YYYY" value="@Model.DOB" required>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>JoinDate</label>
                            <input type="date" class="form-control" id="JoinDate" name="JoinDate" placeholder="DD/MM/YYYY" value="@Model.JoinDate" required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Salary</label>
                            <input type="number" class="form-control" placeholder="Enter Salary..." name="Salary" value="@Model.Salary">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Qualification</label>
                            <input type="text" class="form-control" placeholder="Enter Qualification..." name="Qualification" value="@Model.Qualification">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>AadharNo</label>
                            <input type="number" class="form-control" placeholder="Enter AadharNo..." name="AadharNo" value="@Model.AadharNo">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Pan No</label>
                            <input type="text" class="form-control" placeholder="Enter Pan No. ..." name="PanNo" value="@Model.PanNo">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>State Name</label>
                            <input type="text" class="form-control" placeholder="Enter StateName..." name="StateName" value="@Model.StateName">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>StateCode</label>
                            <input type="text" class="form-control" placeholder="Enter StateCode..." name="StateCode" value="@Model.StateCode">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>CityName</label>
                            <input type="text" class="form-control" placeholder="Enter CityName..." name="CityName" value="@Model.CityName">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>CityCode</label>
                            <input type="text" class="form-control" placeholder="Enter CityCode..." name="CityCode" value="@Model.CityCode">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Pincode</label>
                            <input type="number" class="form-control" placeholder="Enter Pincode..." name="Pincode" value="@Model.Pincode">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control" placeholder="Enter Address..." name="Address" value="@Model.Address">
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Upload  File</label> <br>
                    <div class="col-sm-10">
                        <input type="file" id="" name="fileupload1" class="dropify" data-default-file="@Model.File_Path" />
                        <input type="hidden" name="File_Path" value="@Model.File_Path" />
                    </div>
                </div>

                <div class="row m-t-30">
                    <div class="col-md-12">
                        <input type="hidden" name="id" value="@Model.id" />
                        <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">Submit</button>
                    </div>
                </div>
            }
    </div>
    <!-- /.card-body -->
</div>


<script>
    $(document).ready(function () {


        $("[data-select]").each(function () {
            var obj = $(this);
            obj.val(obj.attr("data-select"))
        });


    });
</script>