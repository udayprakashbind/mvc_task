@model List<mvc_task.Models.manage_pi>

@{
    ViewBag.Title = "view_pi";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}





<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">

                        <h3 class="card-title float-right">PI List </h3>
                    </div>
                    <div class="card-body">
                        <table id="example" class="table table-bordered table-hover justify-content-center text-center">
                            <thead>
                                <tr class="bg-primary">
                                    <th>Sr.No.</th>
                                    <th>PI No</th>
                                    <th>Order No</th>
                                    <th>Quotation Reference</th>
                                    <th>Lead Reference</th>
                                    <th>Employee</th>
                                    <th>Branch</th>
                                    <th>Select Bill TO</th>
                                    <th>Date</th>
                                    <th>Select Ship TO</th>
                                    <th>Add P.O.R No</th>
                                    <th>LAN ID</th>
                                    <th>PromoCode</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.PINo</td>
                                            <td>@item.OrderNo</td>
                                            <td>@item.QuotationReference</td>
                                            <td>@item.LeadReference</td>
                                            <td>@item.Employee</td>
                                            <td>@item.Branch</td>
                                            <td>@item.SelectBillTO</td>
                                            <td>@item.Date</td>
                                            <td>@item.SelectShipTO</td>
                                            <td>@item.Add_PORNo</td>
                                            <td>@item.LANID</td>
                                            <td>@item.PromoCode</td>
                                            <td><a href="/admin/add_pi?id=@(item.id)" class="btn btn-success" style="width:50px"><i class="fas fa-edit"></i></a> || <a href="/admin/delet_pi?id=@(item.id)" class="btn btn-danger " style="width:50px"> <i class="fas fa-solid fa-trash"></i></a></td>
                                        </tr>
                                        i++;
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>


    </div>


    <!-- /.container-fluid -->
</section>

